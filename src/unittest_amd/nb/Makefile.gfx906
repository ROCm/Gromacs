HIP_PATH?= $(wildcard /opt/rocm/hip)
ifeq (,$(HIP_PATH))
        HIP_PATH=../../..
endif

HIPCC=$(HIP_PATH)/bin/hipcc

TARGET=hcc

SOURCES = nbnxm_cuda_kernel_adh-atomicInt.hip.cpp nbnxm_cuda_kernel_adh.hip.cpp nbnxm_cuda_kernel_atomicInt.hip.cpp nbnxm_cuda_kernel_atomicInt.hip.cpp nbnxm_cuda_kernel.hip.cpp

OBJECTS = $(SOURCES:.cpp=.o)

EXECUTABLE=nbnxm_cuda_kernel_adh-atomicInt.hip.out nbnxm_cuda_kernel_adh.hip.out nbnxm_cuda_kernel_atomicInt.hip.out nbnxm_cuda_kernel_atomicInt.hip.out nbnxm_cuda_kernel.hip.out

all: $(EXECUTABLE)

CXXFLAGS =-g

CXX=$(HIPCC)

%.out: %.o
	$(HIPCC) -DHCC_ENABLE_ACCELERATOR_PRINTF -o $@ $^

clean:
	rm -f $(EXECUTABLE)
	rm -f $(OBJECTS)
	rm -f $(HIP_PATH)/src/*.o
